generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id      Int      @id @default(autoincrement())
  nombre  String
  correo  String   @unique
  numero  String
  pass    String
  ubi     String?
  paseos  Paseo[]  @relation("UsuarioPaseos")
}

model Paseador {
  id      Int      @id @default(autoincrement())
  nombre  String
  correo  String   @unique
  numero  String
  cedula  String   @unique
  pass    String
  ubi     String
  paseos  Paseo[]  @relation("PaseadorPaseos")
}

model Paseo {
  id          Int      @id @default(autoincrement())
  fecha       DateTime
  hora        String
  mascota     String
  paseador    Paseador @relation(fields: [idPaseador], references: [id], name: "PaseadorPaseos")
  idPaseador  Int
  usuario     Usuario  @relation(fields: [idUsuario], references: [id], name: "UsuarioPaseos")
  idUsuario   Int
}